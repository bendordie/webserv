server {		# just for testing. there is nothing interesting
   listen             80;
   server_name        10.21.23.103;
   root               /Users/cshells/Desktop/git_webserv;
   client_body_size   100;
   index              index4.html, index.htm, index.php;
   methods            GET, POST, DELETE;

   location / {
	    methods     GET, POST, DELETE;
		root        /Users/cshells/Desktop/git_webserv/www/default_site;
		index       index.html;
		autoindex   on;
		#return     301 https://vk.com;

   }
   location /post_body {
        methods            GET, POST;
        client_body_size   100;
        upload	           /Upload ;
        index              index2.html;
        root               /Users/cshells/Desktop/git_webserv;

        cgi_path           /Users/cshells/Desktop/git_webserv/default_form_cgi.py;
        cgi                default_form_cgi.py;
   }
   location /directory {
        methods    GET POST;
        root       789/Users/cmarsha/Desktop/webserv/YoupiBanane;
        index      youpi.bad_extension;
        cgi_path   /Users/cshells/Desktop/git_webserv/mycgi;
        cgi        mycgi;
   }
}

